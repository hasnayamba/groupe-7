            android:text="ac" />

        <Button
            android:id="@+id/activity_main_btnDiscrimination"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginRight="18dp"
            android:background="@android:color/holo_green_dark"
            android:text="ac" />
